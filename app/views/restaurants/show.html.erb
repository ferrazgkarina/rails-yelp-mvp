<h2><strong><%= @restaurant.name%></strong></h2>
<p>Address: <%= @restaurant.address%></p>
<p>Phone number: <%= @restaurant.phone_number%></p>
<p>Category: <%= @restaurant.category%></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.rating %></li>
    <li class="list-group-item"><%= review.content %></li>
   <% end %>
</ul>


<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>


<%= link_to "Back to restaurants", restaurants_path %>
